<Window x:Class="RG_PaintDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RG_PaintDemo"
        mc:Ignorable="d"
        Title="RG-PSI-PZ1 - Marko Sutic" Height="450" Width="800">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="Paint demo" FontFamily="Arial" FontSize="30"/>
        <Menu DockPanel.Dock="Top">
            <MenuItem FontFamily="Arial" ToolTip="Add Ellipse" FontSize="20" Header="_Ellipse">
            </MenuItem>
            <MenuItem FontFamily="Arial" ToolTip="Add Rectangle" FontSize="20" Header="_Rectangle">
            </MenuItem>
            <MenuItem FontFamily="Arial" ToolTip="Add Polygon" FontSize="20" Header="_Polygon">
            </MenuItem>
            <MenuItem FontFamily="Arial" ToolTip="Add Image" FontSize="20" Header="_Image">
            </MenuItem>
            <MenuItem FontFamily="Arial" ToolTip="Undo last action" FontSize="20" Header="_Undo">
            </MenuItem>
            <MenuItem FontFamily="Arial" ToolTip="Redo last action" FontSize="20" Header="_Redo">
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Bottom" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        </Grid>
    </DockPanel>
    
</Window>
